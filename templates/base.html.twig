<!DOCTYPE html>
<html lang="{{ app.request.locale }}" data-bs-theme="light">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{{ app_name }}{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/logo.svg') }}" type="image/svg+xml">
        {% block stylesheets %}
            <link
                href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
                rel="stylesheet"
                integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
                crossorigin="anonymous"
            >
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}

            <script
                src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
                integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
                crossorigin="anonymous"
                defer
            ></script>
            <script
                src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
                integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
                crossorigin="anonymous"
                defer
            ></script>
        {% endblock %}
    </head>
    <body class="min-vh-100 bg-body-tertiary">
        {{ include('_style.html.twig') }}

        {% block body %}
            <div class="container d-flex flex-column p-0 bg-body">
                <header class="d-flex flex-wrap p-2 align-items-center justify-content-center gap-2 border-bottom">
                    <a
                        href="{{ path('app_index') }}"
                        class="d-flex align-items-center me-sm-auto link-body-emphasis text-decoration-none gap-2"
                        rel="home"
                    >
                        <img src="{{ asset('images/logo.svg') }}" alt="{{ app_name }} Logo" style="height: 48px" />
                        <h1 class="fs-4 fw-semibold m-0">{{ app_name }}</h1>
                    </a>
                    <nav>
                        <ul class="nav nav-pills justify-content-center">
                            <li class="nav-item border">
                                <a href="{{ path('app_index') }}" class="nav-link">Home</a>
                            </li>
                            <li class="nav-item border">
                                <a href="{{ path('app_comic_index') }}" class="nav-link">Comics</a>
                            </li>
                            <li class="nav-item border">
                                <a href="//{{ app_host_oreno }}" target="_blank" class="nav-link">Oreno</a>
                            </li>
                        </ul>
                    </nav>
                </header>

                <main class="container-fluid p-0">
                    {% block main %}{% endblock %}
                </main>

                <footer class="d-flex flex-column p-2 bg-body-secondary">
                    <span class="align-self-center"><a
                        href="//{{ app_host_oreno }}"
                        class="text-decoration-none"
                        rel="external"
                    >Oreno</a> - {{ app_name }} {{ 'now'|date('Y') }}</span>
                </footer>
            </div>
        {% endblock %}
    </body>
</html>
